          <archive>
            <manifest>
              <addClasspath>true</addClasspath>
              <classpathPrefix>lib/</classpathPrefix>
              <mainClass>org.hyperimage.client.Main</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
